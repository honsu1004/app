<div class="max-w-5xl mx-auto mt-10 p-6 bg-white rounded-xl shadow">
  <h1 class="text-2xl font-bold mb-6 text-center">思い出フォルダ一覧</h1>

  <!-- フォルダ作成フォーム -->
  <%= form_with model: [@plan, @memory_folder], local: true, class: "mb-8" do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="flex gap-4 items-center">
      <%= f.text_field :name, placeholder: "新しいフォルダ名", class: "flex-1 border px-4 py-2 rounded" %>
      <%= f.file_field :media, multiple: true, class: "hidden", id: "memory_folder_media" %>
      <%= f.submit "作成", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <!-- フォルダ一覧 -->
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
    <% @memory_folders.select(&:persisted?).each do |folder| %>
      <div class="bg-gray-50 rounded-xl shadow hover:shadow-md transition overflow-hidden">
        <%= link_to plan_memory_folder_path(@plan, folder), class: "block" do %>
          <!-- サムネイル -->
          <% memory_with_image = folder.memories.find do |memory|
                memory.media.attached? &&
                memory.media.any? { |file| file.content_type.starts_with?("image/") }
            end %>

          <% if memory_with_image.present? %>
            <% first_image = memory_with_image.media.find { |file| file.content_type.starts_with?("image/") } %>
            <%= image_tag first_image.variant(resize_to_limit: [300,200]), class: "w-full h-32 object-cover" %>
          <% else %>
            <div class="w-full h-32 bg-gray-200 flex items-center justify-center text-gray-400 text-sm">
              画像なし
            </div>
            
          <% end %>

          <!-- フォルダ情報 -->
          <div class="p-4">
            <h3 class="font-semibold text-gray-800 truncate"><%= folder.name %></h3>
            <p class="text-gray-500 text-xs mt-1">
              写真: <%= folder.image_count %>枚 / 動画: <%= folder.video_count %>本
            </p>
            <p class="text-gray-400 text-xs mt-1">
              作成日: <%= folder.created_at.strftime("%Y/%m/%d") %>
            </p>
            
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to "← プランに戻る", plan_path(@plan), class: "mt-8 inline-block text-blue-600 hover:underline" %>
</div>
