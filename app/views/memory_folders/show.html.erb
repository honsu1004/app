<div class="max-w-5xl mx-auto mt-10 p-6 bg-white rounded-xl shadow">

  <h1 class="text-2xl font-bold mb-6 text-center">
    「<%= @memory_folder.name %>」の思い出
  </h1>

  <!-- 思い出追加フォーム -->
  <%= render "memories/form", memory_folder: @memory_folder, memory: @memory %>

  <!-- 思い出一覧 -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-8">
    <% @memories.each do |memory| %>
      <% if memory.persisted? && memory.id.present? %>
        <div class="bg-gray-50 rounded-xl shadow hover:shadow-md transition relative overflow-hidden">
          <% if memory.media.attached? %>
            <% if memory.media.content_type.starts_with?("image/") %>
              <%= link_to url_for(memory.media), target: "_blank" do %>
                <%= image_tag memory.media.variant(resize_to_limit: [400, 300]), class: "w-full h-40 object-cover hover:opacity-80 transition" %>
              <% end %>
            <% elsif memory.media.content_type.starts_with?("video/") %>
              <video controls class="w-full h-40 object-cover">
                <source src="<%= url_for(memory.media) %>" type="<%= memory.media.content_type %>">
              </video>
            <% end %>
          <% elsif memory.url.present? %>
            <p class="text-sm break-all p-4"><%= link_to memory.url, memory.url, target: "_blank", class: "text-blue-500 underline" %></p>
          <% else %>
            <div class="w-full h-40 bg-gray-200 flex items-center justify-center text-gray-400">メディアなし</div>
          <% end %>

          <!-- 下部情報 -->
          <div class="p-3">
            <p class="text-sm text-gray-600">投稿者: <%= memory.user.name %></p>
          </div>

          <!-- メモリ削除ボタン -->
          <%= link_to "削除",
              plan_memory_folder_memory_path(@plan, @memory_folder, memory), 
              method: :delete,
              data: { confirm: "本当に削除しますか？" },
              class: "absolute top-2 right-2 bg-red-500 text-white px-2 py-1 rounded text-xs hover:bg-red-600 transition" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- 戻る＆削除ボタンを横並びで配置 -->
  <div class="mt-6 flex items-center justify-between">
    <%= link_to "← フォルダ一覧に戻る",
        plan_memory_folders_path(@memory_folder.plan),
        class: "text-blue-600 hover:underline" %>

    <%= link_to "フォルダを削除",
        plan_memory_folder_path(@plan, @memory_folder),
        method: :delete,
        data: { confirm: "このフォルダを削除すると中の思い出も全て消えます。よろしいですか？" },
        class: "bg-red-600 text-white px-3 py-1 rounded-lg shadow hover:bg-red-700 transition" %>
  </div>
</div>
