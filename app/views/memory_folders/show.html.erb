<div class="max-w-5xl mx-auto mt-10 p-6 bg-white rounded-xl shadow">

  <!-- フラッシュメッセージ表示領域 -->
  <div id="flash-messages">
    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= alert %>
      </div>
    <% end %>
  </div>

  <h1 class="text-2xl font-bold mb-6 text-center">
    「<%= @memory_folder.name %>」の思い出
  </h1>

  <!-- 思い出追加フォーム -->
  <%= render "memories/form", memory_folder: @memory_folder, memory: @memory %>

  <!-- 思い出一覧 -->
  <div class="mt-8">
    <% @memories.each do |memory| %>
      <% if memory.media.attached? %>
        <div id="memory-<%= memory.id %>" class="mb-8 p-4 bg-gray-50 rounded-xl">
          <!-- メモリ情報 -->
          <div class="mb-4 flex justify-between items-center">
            <div>
              <p class="text-sm text-gray-600">投稿者: <%= memory.user.name %></p>
              <% if memory.url.present? %>
                <p class="text-sm text-blue-600">
                  <%= link_to "リンク", memory.url, target: "_blank", class: "hover:underline" %>
                </p>
              <% end %>
            </div>
            
            <!-- メモリ全体削除ボタン -->
            <%= link_to "思い出全体を削除",
                plan_memory_folder_memory_path(@plan, @memory_folder, memory),
                data: { 
                  confirm: "本当にこの思い出を削除しますか？すべての画像が削除されます。",
                  turbo_method: :delete 
                },
                class: "bg-red-500 text-white px-3 py-1 rounded-md text-sm hover:bg-red-600 transition-colors duration-200 shadow-sm" %>
          </div>

          <!-- 画像グリッド -->
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <% memory.media.each do |image| %>
              <div id="attachment-<%= image.id %>" class="relative group">
                <!-- 画像表示 -->
                <a target="_blank" href="<%= url_for(image) %>">
                  <%= image_tag image.variant(resize_to_limit: [400, 300]), 
                      class: "w-full h-40 object-cover rounded-lg hover:opacity-80 transition" %>
                </a>
                
                <!-- 個別画像削除ボタン（重要：ここを修正！） -->
                <%= link_to plan_memory_folder_memory_attachment_path(@plan, @memory_folder, memory, image.id),
                    data: { 
                      confirm: "この画像を削除しますか？",
                      turbo_method: :delete 
                    },
                    class: "absolute top-2 right-2 bg-white bg-opacity-80 hover:bg-opacity-100 text-red-500 hover:text-red-600 p-2 rounded-full transition-all duration-200 shadow-sm opacity-0 group-hover:opacity-100" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- 戻る＆削除ボタンを横並びで配置 -->
  <div class="mt-6 flex items-center justify-between">
    <%= link_to "← フォルダ一覧に戻る",
        plan_memory_folders_path(@memory_folder.plan),
        class: "text-blue-600 hover:underline" %>

    <%= link_to "フォルダを削除",
        plan_memory_folder_path(@plan, @memory_folder),
        method: :delete,
        data: { confirm: "このフォルダを削除すると中の思い出も全て消えます。よろしいですか？" },
        class: "bg-red-600 text-white px-3 py-1 rounded-lg shadow hover:bg-red-700 transition" %>
  </div>
</div>
