<div class="min-h-screen bg-gray-50 py-10 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- タイトルと作成ボタン -->
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800">旅行プラン一覧</h1>
      <%= link_to "＋ 新規プラン作成", new_plan_path, class: "bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700 transition shadow" %>
    </div>

    <% if @plans.present? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @plans.each do |plan| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
            <!-- 画像 -->
            <%= image_tag(plan.image.attached? ? plan.image : "default_trip.jpg", class: "w-full h-40 object-cover") %>

            <!-- 内容 -->
            <div class="p-4 flex-1 flex flex-col justify-between">
              <div>
                <h2 class="text-lg font-semibold text-gray-800 mb-1">
                  <%= link_to plan.title, plan_path(plan), class: "hover:underline" %>
                </h2>
                <p class="text-sm text-gray-600 mb-2">
                  <%= plan.start_at.strftime('%Y年%m月%d日') %> 〜 <%= plan.end_at.strftime('%Y年%m月%d日') %>
                </p>
              </div>

              <!-- ボタン -->
              <div class="mt-3 flex justify-between space-x-2">
                <%= link_to "編集", edit_plan_path(plan), class: "text-sm bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1 rounded-md" %>
                <%= link_to "削除", plan_path(plan), method: :delete, data: { confirm: "本当に削除しますか？" },
                      class: "text-sm bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center text-gray-600 mt-10">
        <p>現在、旅行プランはありません。</p>
      </div>
    <% end %>
  </div>
</div>
