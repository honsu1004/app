<div class="max-w-2xl mx-auto mt-10 p-6 bg-white rounded-xl shadow">
  <h1 class="text-2xl font-bold mb-6 text-center">新規旅行プラン作成</h1>

  <%= form_with(model: @plans, local: true) do |f| %>
    <% if @plans.present? %>
      <div class="mb-4 text-red-600">
        <h2 class="font-bold">エラーがあります：</h2>
        <ul class="list-disc list-inside">
          <% @plans.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- タイトル -->
    <div class="mb-4">
      <%= f.label :title, "タイトル", class: "block mb-1 font-semibold text-gray-700" %>
      <%= f.text_field :title, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- 説明 -->
    <div class="mb-4">
      <%= f.label :description, "説明", class: "block mb-1 font-semibold text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- 開始日 -->
    <div class="mb-4">
      <%= f.label :start_at, "開始日", class: "block mb-1 font-semibold text-gray-700" %>
      <%= f.date_field :start_at, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- 終了日 -->
    <div class="mb-4">
      <%= f.label :end_at, "終了日", class: "block mb-1 font-semibold text-gray-700" %>
      <%= f.date_field :end_at, class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- ユーザーID（自動挿入） -->
    <%= f.hidden_field :user_id, value: current_user.id %>

    <!-- 送信ボタン -->
    <div class="mt-6">
      <%= f.submit "プランを作成", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow transition" %>
    </div>
  <% end %>
</div>
