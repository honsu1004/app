<%= form_with model: [@plan, memory_folder, memory], local: true, html: { multipart: true }, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :media, "画像または動画", class: "block mb-1 font-semibold" %>
    <%= f.file_field :media, class: "w-full border px-4 py-2 rounded" %>
  </div>

  <div>
    <%= f.label :url, "外部リンク（任意）", class: "block mb-1 font-semibold" %>
    <%= f.text_field :url, placeholder: "https://example.com", class: "w-full border px-4 py-2 rounded" %>
  </div>

  <%= f.submit "追加", class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
<% end %>
