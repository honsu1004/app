<div class="max-w-2xl mx-auto mt-10 p-6 bg-white rounded-xl shadow">
  <h1 class="text-2xl font-bold mb-6 text-center">スケジュールを編集</h1>

  <%= form_with(model: [@plan, @schedule_item], local: true) do |f| %>
    <% if @schedule_item.errors.any? %>
      <div class="bg-red-100 text-red-700 p-4 rounded mb-6">
        <h2 class="font-semibold mb-2">エラーがあります:</h2>
        <ul class="list-disc list-inside">
          <% @schedule_item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :day_number, "日目", class: "block font-medium mb-1" %>
      <%= f.number_field :day_number, min: 1, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :start_time, "開始時間", class: "block font-medium mb-1" %>
      <%= f.time_field :start_time, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :end_time, "終了時間", class: "block font-medium mb-1" %>
      <%= f.time_field :end_time, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-6">
      <%= f.label :address, "場所", class: "block font-medium mb-1" %>
      <%= f.text_field :address, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="flex justify-between items-center mb-4">
      <%= link_to "戻る", plan_schedule_items_path(@plan), class: "text-gray-600 hover:text-gray-900 underline" %>

      <div class="flex space-x-4">
        <%= link_to "削除する", plan_schedule_item_path(@plan, @schedule_item), method: :delete, data: { confirm: "本当に削除してもいいですか？" }, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg transition" %>
        <%= f.submit "更新する", class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-lg transition" %>
      </div>
    </div>
  <% end %>
</div>
