<div class="max-w-md mx-auto mt-20 p-8 bg-white rounded-2xl shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-center">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :"お名前", class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :"パスワード", class: "block text-sm font-medium mb-1" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border rounded-lg px-4 py-2 mt-1 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :"確認用パスワード", class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.submit "登録", class: "w-full bg-green-600 text-white font-semibold py-2 rounded-lg hover:bg-green-700 transition" %>
    </div>
  <% end %>

  <div class="text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
