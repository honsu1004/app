<% content_for :title, "パスワード再設定" %>

<h2 class="text-2xl font-bold mb-6 text-center">パスワードの再設定</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-4">
    <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.submit "パスワードを変更する", class: "w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition" %>
  </div>
<% end %>

<div class="text-center text-sm text-gray-600">
  <%= render "devise/shared/links" %>
</div>
