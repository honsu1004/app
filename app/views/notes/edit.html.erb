<div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-xl shadow-md">
  <h1 class="text-2xl font-bold mb-6 text-center">ノートを編集</h1>

  <%= form_with(model: [@plan, @note], local: true) do |f| %>
    <% if @note.errors.any? %>
      <div class="mb-4 text-red-600">
        <h2 class="font-semibold">以下のエラーがあります:</h2>
        <ul class="list-disc list-inside">
          <% @note.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :content, "内容", class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_area :content, rows: 5, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="flex justify-between">
      <%= link_to "戻る", plan_notes_path(@plan), class: "text-gray-600 hover:text-blue-600" %>
      <%= f.submit "更新する", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
